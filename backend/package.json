{
  "name": "backend",
  "version": "1.0.0",
  "description": "TODO List | Mern",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "c8 node --test tests/unit/*.test.js",
    "test:unit": "c8 node --test tests/unit/*.test.js",
    "test:bdd": "cucumber-js tests/bdd/features/**/*.feature --require tests/bdd/steps/**/*.js --format progress-bar",
    "test:api": "newman run tests/api/\"Todo API Tests.postman_collection.json\"",
    "start": "nodemon index.js"
  },
  "c8": {
    "include": [
      "controller/**/*.js",
      "model/**/*.js",
      "jwt/**/*.js",
      "routes/**/*.js"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**",
      "coverage/**"
    ],
    "reporter": ["lcov", "html"],
    "all": true
  },
  "author": "Harshit Shankhdhar",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "nodemon": "^3.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "newman": "^6.2.1",
    "tslib": "^2.8.1"
  }
}
